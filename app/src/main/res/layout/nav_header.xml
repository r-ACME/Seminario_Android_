<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="160dp"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:background="@drawable/banner2">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="30dp"
        android:src="@drawable/theorema"
        android:id="@+id/img_profile"
        android:layout_centerVertical="true"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Professor Vidal"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:layout_toRightOf="@+id/img_profile"
        android:layout_above="@+id/lbl_profile_mail"
        android:gravity="center"
        android:id="@+id/lbl_profile_name"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="professor.vidal.1971@gmail.com"
        android:textColor="@android:color/black"
        android:layout_toRightOf="@+id/img_profile"
        android:layout_centerVertical="true"
        android:textSize="14sp"
        android:gravity="center"
        android:id="@+id/lbl_profile_mail"/>

</RelativeLayout>